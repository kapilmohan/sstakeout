{
    "manifest_version": 3,
    "name": "SlideShare Takeout",
    "version": "1.0",
    "description": "Download SlideShare presentations easily.",
    "permissions": ["storage", "scripting"],
    "host_permissions": ["https://*.slideshare.net/*"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "takeout.html",
      "default_icon": "icon.png"
    }
  }
  